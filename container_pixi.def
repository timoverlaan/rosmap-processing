# Header
Bootstrap: docker
From: ghcr.io/prefix-dev/pixi:0.34.0

# Files
%files
    pixi.toml /opt/app/pixi.toml
    pixi.lock /opt/app/pixi.lock

# Install dependencies
%post
    apt update
    apt install -y git strace

    cd /opt/app

    # Setup pixi dependencies
    pixi install --all
    
    # Clean up
    rm -rf ~/.cache/rattler